<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WithdrawActivity">

    <TextView
        android:id="@+id/withdrawHeader"
        android:layout_width="318dp"
        android:layout_height="61dp"
        android:layout_marginTop="76dp"
        android:text="@string/withdrawHeaderHint"
        android:textSize="34dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentProfits"
        android:layout_width="326dp"
        android:layout_height="139dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/withdrawHeader"
        android:textSize="34dp"
        android:text="Profits: $0.00"
        android:gravity="center"/>

    <Button
        android:id="@+id/withdrawBtn"
        android:layout_width="240dp"
        android:layout_height="82dp"
        android:layout_marginTop="92dp"
        android:text="@string/withdrawBtnHint"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentProfits" />
</androidx.constraintlayout.widget.ConstraintLayout>